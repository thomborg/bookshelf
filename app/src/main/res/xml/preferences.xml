<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="test"
        android:title="TEST">

        <EditTextPreference
            android:id="@+id/host"
            android:defaultValue="1.1.1.1"
            android:inputType="text"
            android:key="host"
            android:maxLines="1"
            android:singleLine="true"
            android:title="Host"
            android:summary="Host-IP des KOMM-Servers" />

        <EditTextPreference
            android:id="@+id/port"
            android:defaultValue="1"
            android:inputType="text"
            android:key="port"
            android:maxLines="1"
            android:singleLine="true"
            android:title="Port"
            android:summary="Port des KOMM-Servers"/>

    </PreferenceCategory>

</PreferenceScreen>